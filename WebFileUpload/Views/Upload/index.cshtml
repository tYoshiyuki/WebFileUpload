@model IEnumerable<WebFileUpload.Models.Upload>
@{
    ViewBag.Title = "index";
}

<script src="~/Scripts/Upload/Upload.js" type="text/javascript"></script>

<h2>file upload test</h2>

<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>Last Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@Html.DisplayFor(modelItem => item.FileName)</th>
                        <td>@Html.DisplayFor(modelItem => item.LastWriteTime)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="row">
        <div>
            <form id="upload-form" enctype="multipart/form-data" method="post">
                <span class="btn btn-success fileinput-button">
                    <i class="glyphicon glyphicon-plus"></i>
                    <span>Add files...</span>
                    <input type="file" multiple name="uploadFile" id="uploadFile" />
                </span>
                <button class="btn btn-primary start" type="button" id="submit">
                    <i class="glyphicon glyphicon-upload"></i>
                    <span>Start upload</span>
                </button>
            </form>
        </div>
    </div>
</div>

<div class="container file-content">
    <div id="files" class="row"></div>
</div>